						Width="100"
						Margin="1,0"
						VerticalAlignment="Center"
						Value="{Binding Opacity}"
						Maximum="1"
						LargeChange="0.1"
						Minimum="0.2"
						TickFrequency="0.1"
						SmallChange="0.05"
						Style="{DynamicResource FlatSliderStyleKey}" />
				<Button Grid.Column="2"
						Content="+"
						Style="{DynamicResource StatusAreaButton}" />
