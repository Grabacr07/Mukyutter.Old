				<TextBlock Grid.Column="1"
						   Text="{Binding Title}"
						   Foreground="{DynamicResource ForegroundBrushKey}"
						   FontFamily="Segoe UI"
						   FontSize="17"
						   Margin="3,8,8,8"
						   VerticalAlignment="Center"
						   TextTrimming="CharacterEllipsis" />
				<StackPanel Grid.Column="2"
							Orientation="Horizontal"
							HorizontalAlignment="Right"
							VerticalAlignment="Top">
					<chrome:CaptionButton>
						<i:Interaction.Triggers>
							<i:EventTrigger EventName="Click">
								<ei:CallMethodAction TargetObject="{Binding}"
													 MethodName="NormalMode" />
							</i:EventTrigger>
						</i:Interaction.Triggers>
					</chrome:CaptionButton>
					<chrome:CaptionButton WindowAction="Minimize" />
					<chrome:CaptionButton WindowAction="Close" />

				</StackPanel>
			</Grid>
		</Border>

		<!-- region Status area -->

		<Grid Grid.Row="2"
			  Background="{DynamicResource AccentBrushKey}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="8" />
			</Grid.ColumnDefinitions>

			<TextBlock Text="{Binding NotificationMessage}"
					   Margin="5,0"
					   Foreground="{DynamicResource AccentForegroundBrushKey}"
					   TextTrimming="CharacterEllipsis" />

			<!-- region 透過率コントロール -->

			<Grid Grid.Column="1">
				<Grid.Resources>
					<Style x:Key="StatusAreaButton"
						   TargetType="{x:Type Button}">
						<Setter Property="Foreground"
								Value="{DynamicResource ActiveForegroundBrushKey}" />
						<Setter Property="TextOptions.TextFormattingMode"
								Value="Display" />
						<Setter Property="FontSize"
								Value="13" />
						<Setter Property="FontWeight"
								Value="Bold" />
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="{x:Type Button}">
									<ContentPresenter x:Name="presenter"
													  VerticalAlignment="Center"
													  SnapsToDevicePixels="True"
													  Margin="2,0" />
									<ControlTemplate.Triggers>
										<Trigger Property="IsMouseOver"
												 Value="True">
											<Setter TargetName="presenter"
													Property="Opacity"
													Value="0.5" />
										</Trigger>
										<Trigger Property="IsPressed"
												 Value="True">
											<Setter TargetName="presenter"
													Property="Opacity"
													Value="0.5" />
										</Trigger>
									</ControlTemplate.Triggers>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
				</Grid.Resources>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="32" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Button Grid.Column="0"
						Content="-"
						Margin="0,0,0,0"
						Style="{DynamicResource StatusAreaButton}" />
				<Slider Grid.Column="1"
						Width="100"
						Margin="1,0"
						VerticalAlignment="Center"
						Value="{Binding Opacity}"
						Maximum="1"
						LargeChange="0.1"
						Minimum="0.2"
						TickFrequency="0.1"
						SmallChange="0.05"
						Style="{DynamicResource FlatSliderStyleKey}" />
				<Button Grid.Column="2"
						Content="+"
						Style="{DynamicResource StatusAreaButton}" />
				<TextBlock Grid.Column="3"
						   Text="{Binding OpacityPercent, Mode=OneWay}"
						   Margin="5,2,0,0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center" />
				<TextBlock Grid.Column="4"
						   Text=" %"
						   Margin="0,2,0,0"
						   VerticalAlignment="Center" />
			</Grid>

			<!-- endregion-->

		</Grid>

		<!-- endregion -->

		<composing:Composer Grid.Row="1"
							Margin="0,0,0,8"
							DataContext="{Binding Composer}" />
	</Grid>
</chrome:MetroWindow>
